@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Images";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}

<div class="site-section" data-aos="fade">
    <div class="container-fluid">

        <div class="row justify-content-center">

            <div class="col-md-7">
                <div class="row mb-5">
                    <div class="col-12 ">
                        <h2 class="site-section-heading text-center">@ViewBag.İmageCategory</h2>
                    </div>
                </div>
            </div>

        </div>
        <div class="row" id="lightgallery">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 col-xl-3 item" data-aos="fade" data-src="@item.ImageUrl" data-sub-html="<h4>@item.Title</h4><p>@item.Description</p>">
                    <a href="#"><img src="@item.ImageUrl" alt="IMage" class="img-fluid"></a>
                </div>
            }


        </div>
    </div>
</div>